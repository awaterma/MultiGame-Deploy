<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>mx.ecosur</groupId>
    <artifactId>ecosur-ear</artifactId>
    <packaging>ear</packaging>
    <name>Ecosur Game EAR</name>
    <description>EAR containing common EJBs/Webservices, Rule implementationso of ECOSUR games and RIA Flex client for game play and participant registration.</description>
    <parent>
        <artifactId>multi-game-private</artifactId>
        <groupId>mx.ecosur</groupId>
        <version>2.0-SNAPSHOT</version>
    </parent>
    <dependencies>
        <dependency>
            <groupId>mx.ecosur</groupId>
            <artifactId>multi-game-common</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>mx.ecosur</groupId>
            <artifactId>ecosur-ejb</artifactId>
            <version>${project.version}</version>
            <type>ejb</type>
        </dependency>
        <dependency>
            <groupId>mx.ecosur</groupId>
            <artifactId>grid-common</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>mx.ecosur</groupId>
            <artifactId>gente</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>mx.ecosur</groupId>
            <artifactId>manantiales</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>mx.ecosur</groupId>
            <artifactId>pasale</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>mx.ecosur</groupId>
            <artifactId>ecosur-jpa</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
              <groupId>mx.ecosur</groupId>
              <artifactId>multi-game</artifactId>
              <version>${project.version}</version>
              <type>war</type>
        </dependency>   
        <dependency>
            <groupId>org.drools</groupId>
            <artifactId>drools-compiler</artifactId>
            <version>${drools.version}</version>
        </dependency>
        <dependency>
            <groupId>org.drools</groupId>
            <artifactId>drools-core</artifactId>
            <version>${drools.version}</version>
        </dependency>
        <dependency>
            <groupId>org.drools</groupId>
            <artifactId>drools-api</artifactId>
            <version>${drools.version}</version>
        </dependency>
        <dependency>
            <groupId>commons-collections</groupId>
            <artifactId>commons-collections</artifactId>
            <version>3.2.1</version>
        </dependency>
        <dependency>
            <groupId>com.thoughtworks.xstream</groupId>
            <artifactId>xstream</artifactId>
            <version>1.3</version>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-ear-plugin</artifactId>
                <configuration>
                    <security>
                        <security-role>
                            <role-name>admin</role-name>
                        </security-role>
                    </security>
                    <modules>
                        <jarModule>
                            <groupId>org.drools</groupId>
                            <artifactId>drools-compiler</artifactId>
                        </jarModule>
                        <jarModule>
                            <groupId>org.drools</groupId>
                            <artifactId>drools-core</artifactId>
                        </jarModule>
                        <jarModule>
                            <groupId>org.drools</groupId>
                            <artifactId>drools-api</artifactId>
                        </jarModule>
                        <jarModule>
                            <groupId>commons-collections</groupId>
                            <artifactId>commons-collections</artifactId>
                        </jarModule>
                        <jarModule>
                            <groupId>com.thoughtworks.xstream</groupId>
                            <artifactId>xstream</artifactId>
                        </jarModule>
                        <jarModule>
                            <groupId>mx.ecosur</groupId>
                            <artifactId>grid-common</artifactId>
                        </jarModule>
                        <jarModule>
                            <groupId>mx.ecosur</groupId>
                            <artifactId>gente</artifactId>
                        </jarModule>
                        <jarModule>
                            <groupId>mx.ecosur</groupId>
                            <artifactId>manantiales</artifactId>
                        </jarModule>
                        <jarModule>
                            <groupId>mx.ecosur</groupId>
                            <artifactId>pasale</artifactId>
                        </jarModule>
                        <jarModule>
                            <groupId>mx.ecosur</groupId>
                            <artifactId>ecosur-jpa</artifactId>
                        </jarModule>
                        <jarModule>
                            <groupId>mx.ecosur</groupId>
                            <artifactId>multi-game-common</artifactId>
                        </jarModule>
                        <ejbModule>
                            <groupId>mx.ecosur</groupId>
                            <artifactId>ecosur-ejb</artifactId>
                        </ejbModule>
                        <webModule>
                           <groupId>mx.ecosur</groupId>
                           <artifactId>multi-game</artifactId>
                        </webModule>
                    </modules>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <profiles>
       <profile>
           <id>deploy</id>
           <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <build>
            <plugins>
                <!-- We use the EXEC plugin for deployment -->
                <plugin>
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>exec-maven-plugin</artifactId>
                    <version>1.1</version>
                    <executions>
                        <execution>
                            <phase>install</phase>
                            <goals>
                                <goal>exec</goal>
                            </goals>
                            <configuration>
                                <executable>${server}/bin/asadmin</executable>
                                <workingDirectory>.</workingDirectory>
                                <arguments>
                                    <argument>deploy</argument>
                                    <argument>--user</argument>
                                    <argument>admin</argument>
                                    <argument>--passwordfile</argument>
                                    <argument>src/main/resources/passwd</argument>
                                    <argument>--name</argument>
                                    <argument>${artifactId}</argument>                                      
                                    <argument>target/${artifactId}-${project.version}.ear</argument>
                                </arguments>
                            </configuration>
                        </execution>
                    </executions>
                </plugin>
            </plugins>
          </build>    
       </profile>
    </profiles>
    <properties>
        <netbeans.hint.deploy.server>JBoss4</netbeans.hint.deploy.server>
    </properties>
</project>
